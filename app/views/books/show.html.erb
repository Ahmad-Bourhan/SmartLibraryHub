<% content_for :title, @book.title %>

<div class="d-flex justify-content-center">
  <div class="card shadow p-4 mb-4" style="width: 30rem;">
    <div class="card-body text-center">
      <i class="bi bi-book" style="font-size: 4rem; color: #0d6efd;"></i>
      <h3 class="card-title mt-3"><%= @book.title %></h3>
      <p class="card-text"><strong>Author:</strong> <%= @book.author %></p>
      <p class="card-text"><strong>Description:</strong> <%= @book.description %></p>
      <p class="card-text"><strong>Pages:</strong> <%= @book.pages %></p>
    </div>

    <div class="card-footer text-center bg-white border-0">
      <% if current_user.admin? %>
        <%= link_to "Edit this book", edit_book_path(@book), class: "btn btn-outline-warning me-2" %>
        <%= link_to "Destroy this book", @book, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
      <% end %>

      <%= link_to "Back to books", books_path, class: "btn btn-secondary mt-3 d-block" %>
    </div>
  </div>
</div>
