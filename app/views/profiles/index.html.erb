<% content_for :title, "All User Profiles" %>

<h2 class="text-center mb-4">ðŸ‘¥ All User Profiles</h2>

<div class="row row-cols-1 row-cols-md-2 g-4">
  <% @users.each do |user| %>
    <div class="col">
      <div class="card border border-primary-subtle rounded-4 shadow-sm" style="background-color: #f8f9fa;">
        <div class="card-body">
          <h5 class="card-title fw-bold mb-3"><%= user.first_name %> <%= user.last_name %></h5>
          <p><strong>Email:</strong> <%= user.email %></p>
          <p><strong>Date of Birth:</strong> <%= user.date_of_birth&.strftime('%B %d, %Y') || "N/A" %></p>
          <p><strong>Phone:</strong> <%= user.phone.presence || "N/A" %></p>
          <p><strong>Eircode:</strong> <%= user.eircode.presence || "N/A" %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
