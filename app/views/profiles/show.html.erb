<% content_for :title, "My Profile" %>

<h2 class="text-center mb-4">ðŸ‘¤ My Profile</h2>

<div class="card mx-auto shadow-sm border border-secondary-subtle rounded-4" style="max-width: 600px; background-color: #f0f8ff;">
  <div class="card-body">
    <p><strong>First Name:</strong> <%= @user.first_name.presence || "N/A" %></p>
    <p><strong>Last Name:</strong> <%= @user.last_name.presence || "N/A" %></p>
    <p><strong>Date of Birth:</strong> <%= @user.date_of_birth&.strftime('%B %d, %Y') || "N/A" %></p>
    <p><strong>Phone:</strong> <%= @user.phone.presence || "N/A" %></p>
    <p><strong>Eircode:</strong> <%= @user.eircode.presence || "N/A" %></p>
  </div>
  <div class="card-footer text-center">
    <%= link_to "Edit Profile", edit_profile_path, class: "btn btn-outline-primary" %>
  </div>
</div>
<% if current_user.admin? %>
  <div class="mt-4 text-center">
    <%= link_to "View All Profiles", profiles_path, class: "btn btn-primary" %>
  </div>
<% end %>
<div class="mt-4 text-center">
  <%= button_to "Delete My Profile", profile_path, method: :delete, data: { confirm: "Are you sure you want to delete your profile? This cannot be undone." }, class: "btn btn-danger" %>
</div>
